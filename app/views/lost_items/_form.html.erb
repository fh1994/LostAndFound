<%= form_for([@user, @lost_item]) do |f| %>
  <% if @lost_item.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-error">
        <%= pluralize(@lost_item.errors.count, "error") %>
        prohibited this lost_item from being saved.
      </div>
      <ul>
        <% @lost_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :lost_time %><br />
    <%= f.datetime_select :lost_time %>
  </div>
  <div class="field">
    <%= f.label :detail %><br />
    <%= f.text_area :detail, rows: 3 %>
  </div>
  <div class="field">
    <%= f.label :finder %><br />
    <%= f.text_field :finder %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </div>
  <div class="field">
    <%= f.label :place %><br />
    <%= f.text_field :place %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br />
    <%= f.number_field :category_id, in: 1..5 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
